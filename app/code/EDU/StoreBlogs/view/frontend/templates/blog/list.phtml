                                <?= $block->escapeHtml($blog->getTitle()) ?>
                            </a>
                        </h2>
                        <div class="blog-meta">
                            <span class="blog-date">
                                <?= $block->escapeHtml(__('Published: %1', $block->formatDate($blog->getPublishedAt()))) ?>
                            </span>
                            <span class="blog-status">Status: <?= $block->escapeHtml($blog->getStatus()) ?></span>
                            <span class="blog-store">Store: <?= $block->escapeHtml($blog->getStoreId()) ?></span>
                        </div>
                    </div>
                    <div class="blog-content">
                        <?= $block->filterWysiwygContent($blog->getContent()) ?>
                    </div>
                    <div class="blog-actions">
                        <a href="<?= $block->escapeUrl($block->getBlogUrl($blog)) ?>"
                           class="action read-more">
                            <?= $block->escapeHtml(__('Read More')) ?>
                        </a>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
    <?php else: ?>
        <div class="message info empty">
            <span><?= $block->escapeHtml(__('No blog articles available at this time.')) ?></span>
