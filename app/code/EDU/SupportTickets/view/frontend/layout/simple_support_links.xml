<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Simple approach: Add to top links -->
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" 
                   name="simple.support.ticket.link">
                <arguments>
                    <argument name="label" xsi:type="string">Support Ticket</argument>
                    <argument name="path" xsi:type="string">supporttickets/index/create</argument>
                    <argument name="title" xsi:type="string">Submit Support Ticket</argument>
                    <argument name="class" xsi:type="string">support-ticket-link</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>


