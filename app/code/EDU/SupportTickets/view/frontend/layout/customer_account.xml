<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" 
                   name="customer-account-navigation-support-tickets" 
                   template="Magento_Customer::account/navigation/link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">My Support Tickets</argument>
                    <argument name="path" xsi:type="string">supporttickets/index/index</argument>
                    <argument name="title" xsi:type="string">View My Support Tickets</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>


