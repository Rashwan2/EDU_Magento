<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Floating Support Button -->
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template"
                   name="support.ticket.floating.button"
                   template="EDU_SupportTickets::support_ticket_button.phtml">
                <arguments>
                    <argument name="css_class" xsi:type="string">support-ticket-floating</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template"
                   name="custom.header.button"
                   template="EDU_SupportTickets::header_support_link.phtml"
                   before="-"/>
        </referenceContainer>
    </body>
</page>
