<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Questions API - Essential routes only -->
    <route url="/V1/questions" method="GET">
        <service class="EDU\QuestionHub\Api\QuestionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/questions" method="POST">
        <service class="EDU\QuestionHub\Api\QuestionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/questions/product/:productId" method="GET">
        <service class="EDU\QuestionHub\Api\QuestionRepositoryInterface" method="getByProductId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Answers API - Essential routes only -->
    <route url="/V1/answers" method="POST">
        <service class="EDU\QuestionHub\Api\AnswerRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/answers/question/:questionId" method="GET">
        <service class="EDU\QuestionHub\Api\AnswerRepositoryInterface" method="getByQuestionId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/answers/:answerId/helpful" method="POST">
        <service class="EDU\QuestionHub\Api\AnswerRepositoryInterface" method="incrementHelpfulCount"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/answers/:answerId/not-helpful" method="POST">
        <service class="EDU\QuestionHub\Api\AnswerRepositoryInterface" method="decrementHelpfulCount"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>
